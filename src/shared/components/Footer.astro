        </ul>
      </div>

      <!-- Ajuda e Informações -->
      <div>
        <h3 class="font-title font-bold text-lg mb-4">Ajuda & Informações</h3>
        <ul class="space-y-2 text-sm">
          <li><a href="/institucional/termos" class="hover:text-accent transition-colors">Termos e condições</a></li>
          <li><a href="/produtos" class="hover:text-accent transition-colors">Produtos</a></li>
        </ul>
      </div>

      <!-- Sobre nós -->
      <div>
        <h3 class="font-title font-bold text-lg mb-4">Sobre nós</h3>
        <ul class="space-y-2 text-sm">
          <li><a href="/sobre" class="hover:text-accent transition-colors">Sobre</a></li>
          <li><a href="/contato" class="hover:text-accent transition-colors">Fale conosco</a></li>
        </ul>
