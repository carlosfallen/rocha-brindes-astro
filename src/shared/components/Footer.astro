      <!-- Newsletter -->
      <div>
        <h3 class="font-title font-bold text-lg mb-4">Fique por dentro</h3>
        <form class="flex gap-2">
          <input 
            type="email" 
            placeholder="Seu e-mail" 
            class="flex-1 px-3 py-2 rounded-lg text-dark text-sm"
          />
          <button 
            type="submit"
            class="bg-accent text-dark px-4 py-2 rounded-lg font-semibold hover:opacity-90 transition-all"
          >
            →
          </button>
        </form>
      </div>
    </div>

    <div class="border-t border-white/20 mt-8 pt-8 text-center text-sm">
